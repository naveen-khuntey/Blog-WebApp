<%- include("partials/header") %> 
    <link rel = "stylesheet" type = "text/css" href = "css/contactstyle.css">
<%- include("partials/headerdown") %> 
        <form class="form" action="#" method="post">
            <div class = "heading">
                <h1 class="main_heading">Contact Form</h1>
                <h4 class="sub_heading">Please fill all the texts in the fields.</h4>
            </div> 
            <div class = "fields">
                <input type="text"  name="name" placeholder = "Your Name" autocomplete="off">
                <input type="email"  name="email" placeholder = "Your Email" autocomplete="off">
                <input type="text"  name="sub" placeholder = "Subject" autocomplete="off">
                <textarea type="text" cols = "70" rows ="5" placeholder= "Your message" autocomplete="off"></textarea>
            </div>
                <button type="submit">SEND</button>
        </form> 


<%- include("partials/footer") %> 